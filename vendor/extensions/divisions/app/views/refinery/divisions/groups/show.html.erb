<div class="container">
  <% content_for :body_content_title do %>
    <%= @group.division.name %> - <%= @group.name %>
  <% end %>

  <% content_for :body do %>
    <div class="row">
      <div class="col-md-12">
        <section>
          <%= image_fu @group.photo, nil, class: 'img-fluid' %>
          <section class="positions">
            <% @group.positions.each do |position| %>
              <%= render position %>
            <% end %>
          </section>
          <p>
            <%=raw @group.description %>
          </p>
        </section>
      </div>
    </div>
  <% end %>

  <%= render '/refinery/content_page' %>
</div>
