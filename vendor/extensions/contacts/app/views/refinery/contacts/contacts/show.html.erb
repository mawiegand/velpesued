<% content_for :body_content_title do %>
  <%= @contact.name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @contact.name %>
    </p>
  </section>
  <section>
    <h1>Photo</h1>
    <p>
      <%= image_fu @contact.photo, nil %>
    </p>
  </section>
  <section>
    <h1>Mail</h1>
    <p>
      <%=raw @contact.mail %>
    </p>
  </section>
  <section>
    <h1>Phone</h1>
    <p>
      <%=raw @contact.phone %>
    </p>
  </section>
  <section>
    <h1>Mobile</h1>
    <p>
      <%=raw @contact.mobile %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="contacts">
      <% @contacts.each do |contact| %>
        <li>
          <%= link_to contact.name, refinery.contacts_contact_path(contact) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
