<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(contact) -%>">
  <span class='title'>
    <%= contact.name %>
  </span>

  <span class='preview'></span>

  <span class='actions'>
    <%= action_icon(:preview, refinery.contacts_contact_path(contact), t('.view_live_html')) %>
    <%= action_icon(:edit,    refinery.edit_contacts_admin_contact_path(contact), t('.edit') ) %>
    <%= action_icon(:delete,  refinery.contacts_admin_contact_path(contact), t('.delete'),
      { class: "cancel confirm-delete",
        data: {confirm: t('message',  scope: 'refinery.admin.delete', title: contact.name)}}  ) %>
  </span>
</li>
