<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(division) -%>">
  <span class='title'>
    <%= division.name %>
  </span>

  <span class='preview'></span>

  <span class='actions'>
    <%= action_icon(:preview, refinery.divisions_division_path(division), t('.view_live_html')) %>
    <%= action_icon(:edit,    refinery.edit_divisions_admin_division_path(division), t('.edit') ) %>
    <%= action_icon(:delete,  refinery.divisions_admin_division_path(division), t('.delete'),
      { class: "cancel confirm-delete",
        data: {confirm: t('message',  scope: 'refinery.admin.delete', title: division.name)}}  ) %>
  </span>
</li>
