<ul>
  <% if ::Refinery::Contacts::Admin::ContactsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.contacts_admin_contacts_path %>
    </li>
  <% end %>
  <li>
    <%= action_label :add, refinery.new_contacts_admin_contact_path, t('.create_new') %>
  </li>
<% if !searching? && ::Refinery::Contacts::Admin::ContactsController.sortable? && ::Refinery::Contacts::Contact.many? %>
  <li>
    <%= action_label :reorder,
                     refinery.contacts_admin_contacts_path,
                     t('.reorder', what:  "Contacts"), id: 'reorder_action'%>
    <%= action_label :reorder_done,
                     refinery.contacts_admin_contacts_path,
                      t('.reorder_done', what: "Contacts"), id: 'reorder_action_done', class: 'hidden'%>
  </li>
<% end %>
</ul>
