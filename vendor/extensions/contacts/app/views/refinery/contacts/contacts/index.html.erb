<section class="container">
  <% content_for :body do %>
    <section id="contacts">
      <% @contacts.each do |contact| %>
        <article>
          <%= image_fu contact.photo, '150x150', class: 'float-left' %>
          <div class="clearfix">
            <h3><%=raw contact.name %></h3>
            <%=raw contact.mail %><br>
            <%=raw contact.phone %><br>
            <%=raw contact.mobile %><br>
          </div>
        </article>
      <% end %>
    </section>
  <% end %>

  <%= render '/refinery/content_page' %>
</section>
