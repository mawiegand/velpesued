<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(group) -%>">
  <span class='title'>
    <%= group.name %> - <%= group.division.name %>
  </span>

  <span class='preview'></span>

  <span class='actions'>
    <%= action_icon(:preview, refinery.divisions_division_group_path(group.division, group.friendly_id), t('.view_live_html')) %>
    <%= action_icon(:edit,    refinery.edit_divisions_admin_group_path(group), t('.edit') ) %>
    <%= action_icon(:delete,  refinery.divisions_admin_group_path(group), t('.delete'),
      { class: "cancel confirm-delete",
        data: {confirm: t('message',  scope: 'refinery.admin.delete', title: group.name)}}  ) %>
  </span>
</li>
