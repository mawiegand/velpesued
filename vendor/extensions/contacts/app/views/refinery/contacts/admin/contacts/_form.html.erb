<%= form_for [refinery, :contacts_admin, @contact] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @contact,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :photo -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :photo_id,
               :image => @contact.photo,
               :toggle_image_display => false -%>
  </div>

  <div class='field'>
    <%= f.label :mail -%>
    <%= f.text_field :mail -%>
  </div>

  <div class='field'>
    <%= f.label :phone -%>
    <%= f.text_field :phone -%>
  </div>

  <div class='field'>
    <%= f.label :mobile -%>
    <%= f.text_field :mobile -%>
  </div>

  <%= render '/refinery/admin/form_actions', f: f,
             continue_editing: false,
             delete_title: t('delete', scope: 'refinery.contacts.admin.contacts.contact'),
             delete_confirmation: t('message', scope: 'refinery.admin.delete', title: @contact.name),
             cancel_url: refinery.contacts_admin_contacts_path -%>
<% end -%>
