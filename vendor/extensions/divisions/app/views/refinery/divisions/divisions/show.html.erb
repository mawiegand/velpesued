<div class="container">
  <% content_for :body_content_title do %>
    <%= @division.name %>
  <% end %>

  <% content_for :body do %>
    <div class="row">
      <div class="col-12">
        <p>
          <%=raw @division.description %>
        </p>
      </div>
    </div>
    <section class="row positions">
      <% @division.positions.each do |position| %>
        <div class="col-12 col-lg-6">
          <%= render position %>
        </div>
      <% end %>
    </section>

    <section class="row groups">
      <% @groups.each do |group| %>
        <div class="col-12 col-md-6 col-lg-4 d-flex align-items-stretch">
          <div class="card mb-4 group">
            <div class="group-photo">
              <% if group.photo %>
                <%= image_fu group.photo, '348x232' %>
              <% else %>
                <%= fa_icon 'users' %>
              <% end %>
            </div>
            <div class="card-body">
              <a href="<%= refinery.divisions_division_group_path(group.division, group.friendly_id) %>">
                <span class="card-title"><%= group.name %></span>
              </a>
            </div>
          </div>
        </div>
      <% end %>
    </section>
  <% end %>

  <%= render '/refinery/content_page' %>
</div>