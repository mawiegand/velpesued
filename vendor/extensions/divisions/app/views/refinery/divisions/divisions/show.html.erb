<% content_for :body_content_title do %>
  <%= @division.name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @division.name %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @division.description %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="divisions">
      <% @divisions.each do |division| %>
        <li>
          <%= link_to division.name, refinery.divisions_division_path(division) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
