<section class="container">
  <% content_for :body do %>
    <section id="contacts">
      <% @divisions.each do |division| %>
        <section class="row division">
          <div class="col-12">
            <h2><%= division.name %></h2>
            <div class="row positions">
              <% division.positions.each do |position| %>
                <div class="col-12 col-lg-6">
                  <%= render position %>
                </div>
              <% end %>
            </div>

            <% division.groups.each do |group| %>
              <section class="row group">
                <div class="col-12">
                  <h3><%= group.name %></h3>
                  <div class="row positions">
                    <% group.positions.each do |position| %>
                      <div class="col-12 col-lg-6">
                        <%= render position %>
                      </div>
                    <% end %>
                  </div>
                </div>
              </section>
            <% end %>
          </div>
        </section>
      <% end %>
    </section>
  <% end %>

  <%= render '/refinery/content_page' %>
</section>
