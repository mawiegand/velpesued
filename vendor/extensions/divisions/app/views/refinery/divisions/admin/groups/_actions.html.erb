<ul>
  <% if ::Refinery::Divisions::Admin::GroupsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.divisions_admin_groups_path %>
    </li>
  <% end %>
  <li>
    <%= action_label :add, refinery.new_divisions_admin_group_path, t('.create_new') %>
  </li>
<% if !searching? && ::Refinery::Divisions::Admin::GroupsController.sortable? && ::Refinery::Divisions::Group.many? %>
  <li>
    <%= action_label :reorder,
                     refinery.divisions_admin_groups_path,
                     t('.reorder', what:  "Groups"), id: 'reorder_action'%>
    <%= action_label :reorder_done,
                     refinery.divisions_admin_groups_path,
                      t('.reorder_done', what: "Groups"), id: 'reorder_action_done', class: 'hidden'%>
  </li>
<% end %>
</ul>
