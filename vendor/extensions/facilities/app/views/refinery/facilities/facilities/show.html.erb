<% content_for :body_content_title do %>
  <%= @facility.name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @facility.name %>
    </p>
  </section>
  <section>
    <h1>Photo</h1>
    <p>
      <%= image_fu @facility.photo, nil %>
    </p>
  </section>
  <section>
    <h1>Address</h1>
    <p>
      <%=raw @facility.address %>
    </p>
  </section>
  <section>
    <h1>Maps Link</h1>
    <p>
      <%=raw @facility.maps_link %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="facilities">
      <% @facilities.each do |facility| %>
        <li>
          <%= link_to facility.name, refinery.facilities_facility_path(facility) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
