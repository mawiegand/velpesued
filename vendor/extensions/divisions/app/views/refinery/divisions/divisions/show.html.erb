<div class="container">
  <% content_for :body_content_title do %>
    <%= @division.name %>
  <% end %>

  <% content_for :body do %>
    <div class="row">
      <div class="col-md-12">
        <section>
          <p>
            <%=raw @division.description %>
          </p>
        </section>
      </div>
    </div>

    <%# TODO: implement and use helper for cards %>
    <section class="row groups">
      <% @groups.each do |group| %>
        <div class="col-md-4">
          <a href="<%= refinery.divisions_division_group_path(group.division_id, group) %>">
            <div class="card mb-4 box-shadow group">
              <%# TODO: show default image if none photo present %>
              <%= image_fu group.photo, '250x350', class: 'img-fluid card-img-top' %>
              <div class="card-body">
                <span><%= group.name %></span>
              </div>
            </div>
          </a>
        </div>
      <% end %>
    </section>
  <% end %>

  <%= render '/refinery/content_page' %>
</div>