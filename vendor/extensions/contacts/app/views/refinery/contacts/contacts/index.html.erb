<section class="container">
  <% content_for :body do %>
    <section id="contacts">
      <% @divisions.each do |division| %>
        <section class="division">
          <h2><%= division.name %></h2>
          <% division.positions.each do |position| %>
            <%= render position %>
          <% end %>

          <% division.groups.each do |group| %>
            <section class="group">
              <h3><%= group.name %></h3>
              <% group.positions.each do |position| %>
                <%= render position %>
              <% end %>
            </section>
          <% end %>
        </section>
      <% end %>
    </section>
  <% end %>

  <%= render '/refinery/content_page' %>
</section>
